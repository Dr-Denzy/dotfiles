alias migrate="rake db:migrate db:test:prepare"
alias remigrate="rake db:migrate && rake db:migrate:redo && rake db:schema:dump db:test:prepare"
alias remongrate="rake mongoid:migrate && rake mongoid:migrate:redo"
alias g="git"
alias s="bundle exec rspec --format=documentation"
alias cuc="bundle exec cucumber --format=pretty"
alias gadd="git add -u && git add . && git status"
alias cadd="git add -u && git add . && git commit -v"
alias gi="gem install"
alias gci="git pull --rebase && rake && git push"
alias giv="gem install -v"
alias tlf="tail -f"
alias b="bundle"
alias be="bundle exec"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'

alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

alias rv="mvim --remote"
alias rs="rails s"
alias rc="rails c"
alias rg="rails g"
alias rdb="rails db"
alias :q="exit"
